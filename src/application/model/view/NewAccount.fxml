<AnchorPane prefHeight="280.0" prefWidth="450.0" stylesheets="@Styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.application.model.view.NewAccountController">
   <children>
      <GridPane layoutX="109.0" layoutY="60.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="45.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="First Name" />
            <Label text="Last Name" GridPane.rowIndex="1" />
            <Label text="E-Mail Address" GridPane.rowIndex="2" />
            <Label text="Password" GridPane.rowIndex="3" />
            <Label text="Repeat Password" GridPane.rowIndex="4" />
            <TextField fx:id="firstNameField" promptText="First Name" GridPane.columnIndex="1">
               <padding>
                  <Insets bottom="3.0" top="3.0" />
               </padding>
            </TextField>
            <TextField fx:id="lastNameField" promptText="Last Name" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <padding>
                  <Insets bottom="3.0" top="3.0" />
               </padding>
            </TextField>
            <TextField fx:id="emailField" promptText="E-Mail Address" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <padding>
                  <Insets bottom="3.0" top="3.0" />
               </padding>
            </TextField>
            <TextField fx:id="passwordField" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <padding>
                  <Insets bottom="3.0" top="3.0" />
               </padding>
            </TextField>
            <TextField fx:id="repeatPasswordField" promptText="Repeat Password" GridPane.columnIndex="1" GridPane.rowIndex="4">
               <padding>
                  <Insets bottom="3.0" top="3.0" />
               </padding>
            </TextField>
         </children>
      </GridPane>
      <ButtonBar layoutX="186.0" layoutY="246.0" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="10.0">
        <buttons>
          <Button mnemonicParsing="false" onAction="#handleOk" stylesheets="@Styles.css" text="OK" />
            <Button cancelButton="true" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
        </buttons>
      </ButtonBar>
      <Label layoutX="14.0" layoutY="14.0" styleClass="column-header" text="Create new User-Account" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="5.0" />
   </children>
</AnchorPane>
